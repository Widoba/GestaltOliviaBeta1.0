{
  "name": "unified-assistant-prototype",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "tune-prompts": "ts-node src/scripts/tunePrompts.ts",
    "tune-prompts:all": "ts-node src/scripts/tunePrompts.ts all --save",
    "tune-prompts:list": "ts-node src/scripts/tunePrompts.ts list",
    "tune-prompts:optimize": "ts-node src/scripts/tunePrompts.ts optimize --save",
    "tune-prompts:example": "ts-node src/examples/promptTuningExample.ts",
    "test-flows": "node src/scripts/testUserFlows.js",
    "test-flows:all": "node src/scripts/testUserFlows.js all --save",
    "test-flows:employee": "node src/scripts/testUserFlows.js category employee --save",
    "test-flows:talent": "node src/scripts/testUserFlows.js category talent --save",
    "test-flows:transition": "node src/scripts/testUserFlows.js category transition --save",
    "test-flows:end-to-end": "node src/scripts/testUserFlows.js category end-to-end --save",
